{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
<header class="header black-bg">
<div class="sidebar-toggle-box">
    <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
</div>
<!-- LOGO -->
<a href="\" class="logo"><b>Ak<span>sam</span></b></a>
<!-- END LOGO -->
<div class="nav notify-row" id="top_menu">

<div class="top-menu">
    <ul class="nav pull-right top-menu">

    {% if app.user %}
        <li><a class="logout" href="{{ path('app_logout') }}">Se déconnecter</a></li>
        {% else %}
         <li><a class="logout" href="{{ path('app_login') }}">Connectez vous</a></li>
         <li><a class="logout" href="{{ path('register') }}">Inscription</a></li>
        {% endif %}
    </ul>
</div>
</header>
	<section class="container">
		<div class="row">
			<div class="col">
				<h1>Messagerie</h1>
				<p>Résumé de la messagerie</p>
				<p>Reçus :  {{ app.user.received|length }} </p>
				<p>Envoés : {{ app.user.sent|length }}  </p>
				<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
					Voir mes dossiers
				</a>
                <a href="{{path("send")}}" class="btn btn-primary">Envoyer un message</a>
			</div>
		</div>
	</section>
	<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
		<div class="offcanvas-header">
			<h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h2>
			<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
            <div class="list-group">
                <a href="{{path("messages")}}" class="list-group-item list-group-item-action active">Accueil</a>
            </div>
            <div class="list-group">
                <a href="{{path("received")}} " class="list-group-item list-group-item-action">Boîte de réception</a>
            </div>
            <div class="list-group">
                <a href="{{path("sent")}} " class="list-group-item list-group-item-action">Eléments envoyés</a>
            </div>
		</div>
	</div>
{% endblock %}
